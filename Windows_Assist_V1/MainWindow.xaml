<Window x:Class="Windows_Assist_V1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_Assist_V1"
        mc:Ignorable="d"
        Title="PowerShell Assistant" 
        Height="220" Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Converter for TextBox placeholder -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Modern button style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="17">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#60FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- Modern TextBox style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#26FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#E0FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="24"
                                BorderThickness="1"
                                BorderBrush="#20FFFFFF">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                             Padding="{TemplateBinding Padding}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,30,0"/>
                                <TextBlock x:Name="PlaceholderText"
                                           Text="Enter your request..."
                                           Foreground="#80FFFFFF"
                                           Margin="18,0,0,0"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVis}}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#30FFFFFF"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="#38FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Spinner animation -->
        <Style x:Key="SpinnerStyle" TargetType="Control">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Grid>
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="Rotation" CenterX="10" CenterY="10" />
                            </Grid.RenderTransform>
                            <Ellipse Width="20" Height="20" Stroke="White" StrokeThickness="2" 
                                     Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse.StrokeDashArray>
                                    <DoubleCollection>
                                        <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib">2</sys:Double>
                                        <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib">2</sys:Double>
                                    </DoubleCollection>
                                </Ellipse.StrokeDashArray>
                            </Ellipse>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                         To="360" Duration="0:0:1" RepeatBehavior="Forever" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder" 
            Background="#DA121212" 
            CornerRadius="28" 
            BorderThickness="1" 
            BorderBrush="#2AFFFFFF">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.6" Color="#222222"/>
        </Border.Effect>
        <Grid Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="71*"/>
                <ColumnDefinition Width="399*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,60" Grid.RowSpan="2">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Fill="#4C9BE8" Margin="0,0,8,0"/>
                    <TextBlock Text="Computer Assistant" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="White" 
                               Margin="0,0,0,16"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="SettingsButton"
                            Style="{StaticResource ModernButton}"
                            Click="SettingsButton_Click"
                            Margin="0,0,6,0"
                            ToolTip="Settings">
                        <Path Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z" 
                              Fill="White" 
                              Stretch="Uniform"
                              Width="16" 
                              Height="16"/>
                    </Button>
                    <Button x:Name="MinimizeButton" 
                            Style="{StaticResource ModernButton}" 
                            Click="MinimizeButton_Click"
                            Margin="0,0,6,0"
                            ToolTip="Minimize">
                        <Rectangle Width="12" Height="2" Fill="White" />
                    </Button>
                    <Button x:Name="CloseButton" 
                            Style="{StaticResource ModernButton}" 
                            Click="CloseButton_Click"
                            ToolTip="Close">
                        <Path Data="M 0,0 L 12,12 M 12,0 L 0,12" 
                              Stroke="White" 
                              StrokeThickness="1.5" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Input Box -->
            <Grid Grid.Row="1" Margin="0,10,0,28" Grid.ColumnSpan="2" Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="UserInput" 
                         Style="{StaticResource ModernTextBox}" 
                         KeyDown="UserInput_KeyDown" 
                         Height="50"
                         Grid.Column="0"/>

                <Button x:Name="PasteButton"
                        Grid.Column="1"
                        Style="{StaticResource ModernButton}"
                        Margin="8,0,0,0"
                        Click="PasteButton_Click"
                        ToolTip="Paste from clipboard">
                    <Path Data="M19,3H5C3.9,3,3,3.9,3,5v14c0,1.1,0.9,2,2,2h14c1.1,0,2-0.9,2-2V5C21,3.9,20.1,3,19,3z M19,19H5V5h14V19z M7,10h2v7H7V10z M11,7h2v10h-2V7z M15,13h2v4h-2V13z" 
                          Fill="White" 
                          Stretch="Uniform"
                          Width="16" 
                          Height="16"/>
                </Button>

                <Button x:Name="ClearButton"
                        Grid.Column="2"
                        Style="{StaticResource ModernButton}"
                        Margin="4,8,4,8"
                        Click="ClearButton_Click"
                        ToolTip="Clear input">
                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41z" 
                          Fill="White" 
                          Stretch="Uniform"
                          Width="16" 
                          Height="16"/>
                </Button>

                <Control x:Name="ProcessingSpinner" 
                        Style="{StaticResource SpinnerStyle}" 
                        Width="20" Height="20" 
                        HorizontalAlignment="Right" 
                        Margin="0,0,22,0"
                        Grid.Column="0"
                        Visibility="Collapsed"/>
            </Grid>



            <!-- Status Text -->
            <StackPanel Grid.Row="3" 
                       Orientation="Horizontal"
                       Margin="8,26,0,-14" Grid.ColumnSpan="2">
                <Ellipse Width="6" Height="6" Fill="#4CCA64" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" 
                       Text="Ready" 
                       Foreground="#AAAAAA"
                       FontSize="12"
                       FontFamily="Segoe UI"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>